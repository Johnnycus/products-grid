<% if signed_in? %>
  <h1 class="text-center">All Products</h1><br>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-4">
        <div class="thumbnail">
          <%= link_to product do %>
            <%= image_tag product.image.url(:medium) %>
          <% end %>
          <div class="caption">
            <h3>
              <%= product.name %>
              <% if product.is_pro? %>
                <span class="badge">PRO</span>
              <% end %>
            </h3>
            <p><%= product.description %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <%= render 'home' %>
<% end %>


